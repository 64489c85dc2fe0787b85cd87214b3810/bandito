{
  "name": "@mftd03/bandito",
  "version": "0.2.4",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "bandito": "bun run bandito.ts"
  },
  "svelte": "./dist/svelte/index.js",
  "types": "./dist/svelte/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/svelte/index.d.ts",
      "svelte": "./dist/svelte/index.js"
    },
    "./css": {
      "import": "./dist/css/bandito.css",
      "require": "./dist/css/bandito.css"
    }
  },
  "files": [
    "dist/svelte",
    "dist/css",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*",
    "!dist/css/favicon.png",
    "!dist/css/robots.txt"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0-next.1",
    "@mftd03/alpha": "^0.6.1"
  },
  "devDependencies": {
    "@mftd03/alpha": "^0.6.1",
    "@sveltejs/adapter-vercel": "^5.3.2",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "sass": "^1.77.4",
    "svelte": "^5.0.0-next.1",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.11"
  },
  "type": "module"
}
